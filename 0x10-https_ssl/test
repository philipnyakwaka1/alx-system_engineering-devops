#!/bin/bash

# Function to display information about a subdomain
display_info() {
    local domain=$1
    local subdomain=$2
    local record_type=$3
    local destination=$4

    echo "The subdomain $subdomain is a $record_type record and points to $destination"
}

# Function to get information about a subdomain
get_subdomain_info() {
    local domain=$1
    local subdomain=$2

    local record_type=$(dig +short -t CNAME "$subdomain.$domain" | awk '{print "CNAME"}')
    local destination=$(dig +short "$subdomain.$domain" | awk '{print $1}')

    display_info "$domain" "$subdomain" "$record_type" "$destination"
}

# Main function to audit subdomains
audit_subdomains() {
    local domain=$1

    # Default subdomains to audit
    subdomains=("www" "lb-01" "web-01" "web-02")

    for subdomain in "${subdomains[@]}"; do
        get_subdomain_info "$domain" "$subdomain"
    done
}

# Main script logic
if [ $# -eq 1 ]; then
    domain=$1
    audit_subdomains "$domain"
elif [ $# -eq 2 ]; then
    domain=$1
    subdomain=$2
    get_subdomain_info "$domain" "$subdomain"
else
    echo "Usage: $0 <domain> [subdomain]"
    exit 1
fi
